{
	"name": "vscode-jest-runner",
	"displayName": "Jest Runner",
	"description": "Simple way to run or debug a single (or multiple) tests from context-menu",
	"version": "0.3.4",
	"publisher": "firsttris",
	"author": "Tristan Teufel",
	"repository": {
		"type": "git",
		"url": "https://github.com/firsttris/vscode-jest-runner.git"
	},
	"license": "MIT",
	"icon": "public/icon.png",
	"engines": {
		"vscode": "^1.19.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension",
	"contributes": {
		"configuration": [
			{
				"title": "Jest-Runner Config",
				"properties": {
					"jestrunner.configPath": {
						"type": "string",
						"default": "",
						"description": "Define jest config path (optionally)",
						"scope": "window"
					},
					"jestrunner.jestPath": {
						"type": "string",
						"default": "",
						"description": "Define jest path (optionally)",
						"scope": "window"
					}
				}
			}
		],
		"commands": [
			{
				"command": "extension.runJest",
				"title": "Run Jest"
			},
			{
				"command": "extension.debugJest",
				"title": "Debug Jest"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.runJest",
					"group": "navigation"
				},
				{
					"command": "extension.debugJest",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test",
		"publish": "vsce publish patch"
	},
	"devDependencies": {
		"@types/node": "^10.12.18",
		"prettier": "^1.16.0",
		"tslint": "^5.12.1",
		"tslint-config-prettier": "^1.17.0",
		"tslint-plugin-prettier": "^2.0.1",
		"typescript": "^3.2.4",
		"vscode": "^1.1.27"
	},
	"dependencies": {
		"vsce": "^1.57.1"
	},
	"__metadata": {
		"id": "firsttris.vscode-jest-runner",
		"publisherId": "firsttris",
		"publisherDisplayName": "firsttris"
	}
}